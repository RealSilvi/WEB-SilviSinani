{
    "plugins": [
        "@shufo/prettier-plugin-blade"
    ],
    "overrides": [
        {
            "files": [
                "*.blade.php"
            ],
            "options": {
                "parser": "blade"
            }
        }
    ],
    "sortTailwindcssClasses": true,
    "tabWidth": 4,
    "semi": true,
    "bracketSameLine": false,
    "printWidth": 120,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "singleAttributePerLine": false
}
